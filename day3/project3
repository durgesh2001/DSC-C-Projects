#include <stdio.h>
int main()
{
    int a, b,i;
    printf("Enter two numbers  a and b");
    scanf("%d%d",&a,&b);
    
    printf("Bitwise AND operator value is = %d\n", a&b);
    printf("Bitwise OR operator value is = %d\n", a|b);
    printf("Bitwise XOR operator value is = %d\n", a^b);
	for (i=0; i<=2; ++i)
        printf("Right shift for %d by %d: %d\n",a, i, a>>i);
     for (i=0; i<=2; ++i) 
        printf("Left shift for %d by %d: %d\n",a, i, a<<i);    
    
    return 0;
}
